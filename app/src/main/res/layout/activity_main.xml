<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/skybackground">

    <ImageView
        android:id="@+id/panel_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B0EBF1"/>

    <ImageView
        android:id="@+id/engine1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_engine"
        />

    <ImageView
        android:id="@+id/engine2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/engine1"
        android:layout_toEndOf="@+id/engine1"
        android:src="@drawable/ic_engine"
        />

    <ImageView
        android:id="@+id/engine3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/engine1"
        android:layout_toEndOf="@+id/engine2"
        android:src="@drawable/ic_engine"
        />

    <ImageView
        android:id="@+id/engine4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/engine1"
        android:layout_toEndOf="@+id/engine3"
        android:src="@drawable/ic_engine"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_below="@+id/engine1"
        android:orientation="horizontal"
        android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible">


        <ImageView
            android:id="@+id/panel_IMG_s4_l"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_seagull"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/panel_IMG_s3_l"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_seagull"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/panel_IMG_s2_l"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_seagull"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/panel_IMG_s1_l"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_seagull"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/panel_IMG_s0_left"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_seagull"
            android:visibility="invisible"
            />

        <ImageButton
            android:id="@+id/panel_BTN_left"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/ic_wheel_left"
            android:text="Left" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible">



        <ImageView
            android:id="@+id/panel_IMG_s4_m"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_seagull"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/panel_IMG_s3_m"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_seagull"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/panel_IMG_s2_m"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_seagull"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/panel_IMG_s1_m"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_seagull"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/panel_IMG_s0_mid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_seagull"
            android:visibility="invisible"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_airplane"
            android:visibility="invisible"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible">



        <ImageView
            android:id="@+id/panel_IMG_s4_r"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_seagull"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/panel_IMG_s3_r"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_seagull"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/panel_IMG_s2_r"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_seagull"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/panel_IMG_s1_r"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_seagull"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/panel_IMG_s0_right"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_seagull"
            android:visibility="invisible"
            />

        <ImageButton
            android:id="@+id/panel_BTN_right"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/ic_wheel_right"
            android:text="Right"
            />

    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="126dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/panel_IMG_main_left"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/ic_airplane"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/panel_IMG_main_mid"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/ic_airplane"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/panel_IMG_main_right"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/ic_airplane"
            android:visibility="invisible"/>

    </LinearLayout>
</RelativeLayout>